<%- include('partials/header') -%>

<div>
    <a
      href="/logout"
      class="col-3 btn btn-primary"
      >Logout</a
    >
  </div>

<div class="container">
  <div class="row mt-5">
    <div class="col-6">
        <%- include('partials/userDetails') -%>
      <div class="mt-5">
        <h2>Add a Recipe</h2>
        <form
          action="/post/createRecipe"
          enctype="multipart/form-data"
          method="POST"
        >
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name"/>
          </div>
          <div class="mb-3">
            <label for="ingredients" class="form-label">Ingredients</label>
            <textarea class="form-control" id="ingredients" name="ingredients"></textarea>
          </div>
          <div class="mb-3">
            <label for="instructions" class="form-label">Instructions</label>
            <textarea class="form-control" id="instructions" name="instructions"></textarea>
          </div>
          <div class="mb-3">
            <label for="lunch" class="form-label">Lunch</label>
            <input type="checkbox" class="form-control" id="lunch" name="lunch" value="Lunch"/>
            <label for="dinner" class="form-label">Dinner</label>
            <input type="checkbox" class="form-control" id="dinner" name="dinner" value="Dinner"/>
            <label for="vegetarian" class="form-label">Vegetarian</label>
            <input type="checkbox" class="form-control" id="vegetarian" name="vegetarian" value="Vegetarian"/>
            <label for="nonVegetarian" class="form-label">Non-Vegetarian</label>
            <input type="checkbox" class="form-control" id="nonVegetarian" name="nonVegetarian" value="Non-Vegetarian"/>
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
      </div>
    </div>
    <div class="col-6">
      <ul class="row list-unstyled">
        <% for(let i=0; i < recipes.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <a href="/post/<%= recipes[i]._id %>">
            <img
              class="img-fluid"
              src="<%= recipes[i].image%>"
            />
          </a>
        </li>
        <% } %>
      </ul>
      <div class="row justify-content-center mt-5">
        <a
          class="btn btn-primary"
          href="/feed"
          >Return to Feed</a
        >
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
